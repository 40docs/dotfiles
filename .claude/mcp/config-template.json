{
  "mcpServers": {
    "_template_server": {
      "command": "npx",
      "args": ["-y", "@package/mcp-server"],
      "env": {
        "API_KEY": "${API_KEY}",
        "CONFIG_PATH": "${HOME}/.config/server"
      },
      "description": "Template MCP server configuration",
      "install_condition": "custom_condition",
      "dependencies": ["dependency1", "dependency2"]
    }
  },
  "configuration_variables": {
    "AZURE_TENANT_ID": {
      "description": "Azure Active Directory tenant ID",
      "required": false,
      "default": "",
      "source": ["env", "azure_cli"]
    },
    "PERPLEXITY_API_KEY": {
      "description": "Perplexity AI API key",
      "required": false,
      "default": "",
      "source": ["env", "file:~/.config/perplexity/key"]
    },
    "BRAVE_API_KEY": {
      "description": "Brave Search API key", 
      "required": false,
      "default": "",
      "source": ["env", "file:~/.config/brave/key"]
    }
  },
  "install_conditions": {
    "always": "Always install this server",
    "azure_environment": "Install when Azure environment detected",
    "development_environment": "Install in development environments",
    "git_repository": "Install when in a git repository",
    "api_keys_available": "Install when required API keys are available",
    "command_available": "Install when specific commands are available",
    "file_exists": "Install when specific files exist"
  }
}