{
  "mcpServers": {
    "azure": {
      "command": "npx",
      "args": ["-y", "@azure/mcp-server-azure"],
      "env": {
        "AZURE_TENANT_ID": "",
        "AZURE_CLIENT_ID": "",
        "AZURE_CLIENT_SECRET": ""
      },
      "description": "Azure cloud operations and resource management",
      "install_condition": "azure_environment",
      "dependencies": ["az"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"],
      "description": "Library documentation and code examples",
      "install_condition": "development_environment",
      "dependencies": []
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory and knowledge management",
      "install_condition": "always",
      "dependencies": []
    },
    "playwright": {
      "command": "npx", 
      "args": ["-y", "@playwright/mcp-server"],
      "description": "Browser automation and E2E testing",
      "install_condition": "development_environment",
      "dependencies": ["npx"]
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "@perplexity/mcp-server"],
      "env": {
        "PERPLEXITY_API_KEY": ""
      },
      "description": "AI-powered web search and research",
      "install_condition": "api_keys_available",
      "dependencies": []
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@brave/mcp-server"],
      "env": {
        "BRAVE_API_KEY": ""
      },
      "description": "Privacy-focused web search",
      "install_condition": "api_keys_available", 
      "dependencies": []
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Git repository operations and workflows",
      "install_condition": "git_repository",
      "dependencies": ["git"]
    }
  },
  "installation_profiles": {
    "minimal": ["memory", "git"],
    "development": ["memory", "git", "context7", "playwright"],
    "azure_dev": ["memory", "git", "context7", "playwright", "azure"],
    "full": ["memory", "git", "context7", "playwright", "azure", "perplexity", "brave-search"]
  },
  "environment_detection": {
    "azure_environment": {
      "conditions": ["AZUREPS_HOST_ENVIRONMENT", "command:az", "file:.azure"],
      "servers": ["azure", "memory", "git"]
    },
    "development_environment": {
      "conditions": ["file:package.json", "file:.git", "file:Dockerfile"],
      "servers": ["context7", "playwright", "memory", "git"]
    },
    "git_repository": {
      "conditions": ["file:.git"],
      "servers": ["git", "memory"]
    },
    "api_keys_available": {
      "conditions": ["env:PERPLEXITY_API_KEY", "env:BRAVE_API_KEY"],
      "servers": ["perplexity", "brave-search"]
    }
  }
}