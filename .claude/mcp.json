{
  "mcpServers": {
    "Perplexity": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "perplexity-mcp"
      ],
      "tools": ["*"],
      "env": {
        "PERPLEXITY_API_KEY": "${input:perplexity-api-key}",
        "PERPLEXITY_MODEL": "sonar"
      }
    },
    "terraform": {
      "command": "docker",
      "tools": ["*"],
      "args": [
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server"
      ]
    }
  }
}
