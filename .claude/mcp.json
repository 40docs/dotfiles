{
  "mcpServers": {
    "mcp-installer": {
      "command": "npx",
      "args": [ "@anaisbetts/mcp-installer" ]
    },
    "Perplexity": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "perplexity-mcp"
      ],
      "tools": ["*"],
      "env": {
        "PERPLEXITY_API_KEY": "${input:perplexity-api-key}",
        "PERPLEXITY_MODEL": "sonar"
      }
    },
    "terraform": {
      "command": "docker",
      "tools": ["*"],
      "args": [
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server"
      ]
    },
    "microsoft-learn": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@microsoft/learn-mcp"
      ],
      "tools": ["*"]
    },
    "microsoft-azure": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@microsoft/azure-mcp"
      ],
      "tools": ["*"],
      "env": {
        "AZURE_AUTH_METHOD": "cli"
      }
    }
  }
}
